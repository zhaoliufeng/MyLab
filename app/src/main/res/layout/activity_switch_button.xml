<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.zhaoliufeng.mylab.CustomButton.SwitchButtonActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="#474747"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <me.zhaoliufeng.customviews.Button.ImageSwitchButton
            android:layout_width="80dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <me.zhaoliufeng.customviews.Button.SwitchButton
        android:layout_marginTop="20dp"
        android:id="@+id/round_btn"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="40dp" />

    <me.zhaoliufeng.customviews.Button.IOSSwitchView
        android:id="@+id/ios_btn"
        android:layout_width="80dp"
        android:layout_height="40dp" />

    <ToggleButton
        android:onClick="toggleOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ToggleButton
        android:onClick="stateOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
