<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.zhaoliufeng.mylab.BootPage.BootPageActivity">

    <me.zhaoliufeng.customviews.BootPage.BootPage
        android:id="@+id/bootPage"
        app:centralCircleRadius="10"
        app:roundCircleRadius="20"
        app:indicator_centralCircleNormalColor="@color/colorPrimary"
        app:indicator_currentCircleColor="@color/colorBlue"
        app:indicator_roundCircleColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:text="TEXT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:padding="100dp"
            android:src="@drawable/cirle_orange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:onClick="bootPageOnClick"
                android:text="CLICK"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>
    </me.zhaoliufeng.customviews.BootPage.BootPage>
</RelativeLayout>
